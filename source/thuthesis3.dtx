% \end{macro}
%
% \begin{macro}{\@@_bookmark_pdf_nosec:nn,\@@_bookmark_pdf:nn}
% 封装 \pkg{hyperref} 的 PDF 书签命令。
%    \begin{macrocode}
\cs_new:Npn \@@_bookmark_pdf_nosec:nn #1#2
  { \pdfbookmark [0] { #1 } { #2 } }
\cs_new:Npn \@@_bookmark_pdf:nn #1#2
  { \phantomsection \@@_bookmark_pdf_nosec:nn {#1} {#2} }
%    \end{macrocode}
